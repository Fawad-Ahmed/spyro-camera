<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snowpuppet.spyro.SpyroCameraActivity">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </LinearLayout>

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spyro_texture_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/camera_shutter"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@null"
        android:src="@drawable/round_shutter_inner_circle"
        android:contentDescription="@string/shutterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <ImageButton
        android:id="@+id/camera_shutter_surround"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@null"
        android:src="@drawable/round_shutter_surround_radius"
        android:contentDescription="@string/shutterSurround"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
